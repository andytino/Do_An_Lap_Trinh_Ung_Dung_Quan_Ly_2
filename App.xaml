<Application x:Class="PosApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PosApp"
             xmlns:viewModel="clr-namespace:PosApp.ViewModel"
             xmlns:component="clr-namespace:PosApp.Components"
             xmlns:view="clr-namespace:PosApp.View"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:LoginViewModel}">
            <view:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:ServerSettingViewModel}">
            <view:ServerSettingView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:MainLayoutViewModel}">
            <view:MainLayoutView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:NavigationBarViewModel}">
            <component:NavigationBar/>
        </DataTemplate>

        <!--<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>-->

    </Application.Resources>
</Application>
