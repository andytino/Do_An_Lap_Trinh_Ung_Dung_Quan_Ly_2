<UserControl x:Class="PosApp.View.ServerSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="white">
        <Border CornerRadius="20"
            BorderThickness="5"
            VerticalAlignment="Center"
            Opacity="0.95">

            <StackPanel HorizontalAlignment="Center">

                <TextBlock FontSize="20"
                           FontWeight="Medium" 
                           Text="SERVER SETTING"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           />

                <StackPanel  Orientation="Horizontal">
                    <Label 
                        Content="Server" 
                        VerticalAlignment="Center"
                        Width="80"
                        Margin="0,0,20,0"
                        FontWeight="Bold"/>
                    <Border Padding="10,10,5,10" 
                        Background="{StaticResource panelBlue40Color}" 
                        CornerRadius="15">
                        <TextBox x:Name="serverTextBox" 
                                 Text="{Binding ServerName}" 
                                 TextWrapping="Wrap"
                                 d:Text="server"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="5"
                                 Width="200"/>
                    </Border>

                </StackPanel>

                <StackPanel  Orientation="Horizontal"
                             HorizontalAlignment="Center"
                             Margin="0,20,0,0">

                    <Label Content="Database"
                           VerticalAlignment="Center"
                           Width="80"
                           Margin="0,0,20,0"
                           FontWeight="Bold"/>

                    <Border Padding="10,10,5,10" 
                        Background="{StaticResource panelBlue40Color}" 
                        CornerRadius="15">
                        <TextBox x:Name="databaseTextBox" 
                                 Text="{Binding Database}" 
                                 d:Text="database"
                                 TextWrapping="Wrap"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="5"
                                 Width="200"/>
                    </Border>

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Style="{StaticResource primaryBtn}"
                            Command="{Binding NavigateLoginCommand}"
                            Content="Save" 
                            VerticalAlignment="Center" 
                            Margin="0,0,20,0"/>

                    <Button Style="{StaticResource secondaryBtn}"
                            Command="{Binding CancelCommand}"
                            Content="Cancel"
                            VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Border>
</UserControl>
